from ConfigParser import SafeConfigParser

cp = SafeConfigParser()
cp.read('$testdir/database.ini')

data = []
data.append(cp.get('db', 'user'))
data.append(cp.get('db', 'password'))
data.append(cp.get('db', 'database'))

Command('mysqladmin -u {0} -p{1} create {2}'.format(*data))
Command('mysql -u {0} -p{1} {2} < $testdir/example001.sql'.format(*data),
        shell=True)
